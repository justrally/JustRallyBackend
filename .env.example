# Environment Configuration Template
# Copy this file to .env.development or .env.production and fill in the values

NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/database?schema=public"

# Cloud SQL Connection Name (for GCP deployment)
CLOUD_SQL_CONNECTION_NAME="project:region:instance"

# Firebase Configuration
FIREBASE_PROJECT_ID="your-firebase-project-id"

# JWT Configuration (generate RS256 key pairs)
JWT_PRIVATE_KEY_PATH="/path/to/jwt-private-key.pem"
JWT_PUBLIC_KEY_PATH="/path/to/jwt-public-key.pem"

# API Configuration
PORT=3000
API_VERSION="v1"

# GCP Configuration
GCP_PROJECT_ID="your-gcp-project-id"