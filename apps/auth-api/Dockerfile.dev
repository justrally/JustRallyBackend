# Development Dockerfile with hot reload
FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Generate Prisma client
RUN cd libs/prisma && npx prisma generate

# Expose ports
EXPOSE 3000 9229

# Development command with nodemon for hot reload
CMD ["npm", "run", "dev", "--workspace=apps/auth-api"]